<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/relativeID"

    tools:context="com.example.wajiha.practice.MainActivity"
    tools:showIn="@layout/activity_main">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:id="@+id/main_frame"
        android:layout_alignBottom="@+id/slidingDrawer">

    </FrameLayout>






    <SlidingDrawer
        android:id="@+id/slidingDrawer"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:content="@+id/content"
        android:handle="@+id/handle"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"



        android:background="#ffffff"
        android:layout_marginLeft="0dp"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:id="@+id/handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:src="@mipmap/paint1"
            android:background="#ffffff" />



        <AbsoluteLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="#ffffff">




            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView2"
                android:layout_x="8dp"
                android:layout_y="11dp"
                android:src="#fb0000"

                android:tag="#fb0000"
                android:theme="@style/Base.Animation.AppCompat.Dialog" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageview"
                android:layout_x="53dp"
                android:layout_y="11dp"
                android:background="#2314f7" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView3"
                android:layout_x="98dp"
                android:layout_y="11dp"
                android:background="#83f939" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView4"
                android:layout_x="143dp"
                android:layout_y="11dp"
                android:background="#73dafd" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView5"
                android:layout_x="188dp"
                android:layout_y="11dp"
                android:background="#fbfafe13" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView6"
                android:layout_x="323dp"
                android:layout_y="11dp"
                android:background="#060505" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView7"
                android:layout_x="233dp"
                android:layout_y="11dp"
                android:background="#ff8c09" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView8"
                android:layout_x="278dp"
                android:layout_y="11dp"
                android:background="#ffffff" />


        </AbsoluteLayout>


    </SlidingDrawer>

    <SlidingDrawer
        android:id="@+id/slidingDrawerTools"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:content="@+id/contentTools"
        android:handle="@+id/handleTools"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentTop="false"
        android:layout_marginBottom="0dp"
        android:layout_alignParentBottom="false"
        style="@style/Base.AlertDialog.AppCompat.Light"
        android:layout_centerVertical="true">

        <ImageButton
            android:id="@+id/handleTools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@mipmap/tools"
            android:background="#ffffff" />



        <AbsoluteLayout
            android:id="@+id/contentTools"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#ffffff"
            android:minHeight="100dp"
            android:minWidth="700dp">


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:id="@+id/home"
                android:src="@mipmap/home"
                android:padding="0dp"
                android:background="#ffffff"
                android:layout_marginLeft="3dp"
                android:layout_y="480dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:id="@+id/camera"
                android:padding="0dp"
                android:background="#ffffff"
                android:src="@mipmap/camera"
                android:layout_marginLeft="3dp"
                android:layout_y="85dp" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:id="@+id/pencil"
                android:padding="0dp"
                android:src="@mipmap/pencil"
                android:background="#ffffff"
                android:layout_marginLeft="3dp"
                android:layout_y="160dp" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:id="@+id/brush"
                android:padding="0dp"
                android:src="@mipmap/brush1"
                android:background="#ffffff"
                android:layout_marginLeft="3dp"
                android:layout_y="0dp" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:id="@+id/eraser"
                android:padding="0dp"
                android:src="@mipmap/eraser"
                android:background="#ffffff"
                android:layout_marginLeft="5dp"
                android:layout_y="320dp" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:id="@+id/bucket"
                android:padding="0dp"
                android:src="@mipmap/images"
                android:background="#ffffff"
                android:layout_marginLeft="3dp"
                android:layout_y="400dp" />


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:id="@+id/shape1"
                android:src="@mipmap/shapes"
                android:padding="0dp"
                android:background="#ffffff"
                android:layout_marginLeft="3dp"
                android:layout_y="240dp" />


        </AbsoluteLayout>


    </SlidingDrawer>
</RelativeLayout>